# Vespucci.ai Environment Variables
# This file contains all the environment variables needed for both API and Discord bot

# Discord bot configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_PREFIX=!  # Optional, defaults to ! if not specified

# LLM configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3-8b-8192

# MCP Configuration
MCP_AUTH_TOKEN=your_mcp_auth_token_here

# Web3 Research MCP Server is configured in Settings class
# Using: npx -y web3-research-mcp@latest

# Remote MCP Servers - prefix with MCP_REMOTE_SERVER_
# Format: MCP_REMOTE_SERVER_SERVERNAME=url
MCP_REMOTE_SERVER_TOOLS=https://example.com/mcp-api/tools
MCP_REMOTE_SERVER_FINANCE=https://example.com/mcp-api/finance

# Debug mode
DEBUG_MODE=False